<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>cn.cuit.filter.encodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>loginServlet</servlet-name>
		<servlet-class>cn.cuit.controller.loginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>loginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>logoffServlet</servlet-name>
		<servlet-class>cn.cuit.controller.logoffServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logoffServlet</servlet-name>
		<url-pattern>/logoff</url-pattern>
	</servlet-mapping>
</web-app>